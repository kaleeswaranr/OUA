	<bean id="logManager" class="java.util.logging.LogManager"
		factory-method="getLogManager">
	</bean>

	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject">
			<ref bean ="logManager" />
		</property>
		<property name="targetMethod">
			<value>readConfiguration</value>
		</property>
		<property name="arguments">
			<list>
				<value type="java.io.InputStream">classpath:oua-logging.properties</value>
			</list>
		</property>
	</bean>
	
	
	
	
	
